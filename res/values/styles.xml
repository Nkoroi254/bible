<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="theme" parent="Theme.AppCompat">
    </style>

    <style name="chapter" parent="Theme.AppCompat">
    </style>

    <style name="theme.light" parent="Theme.AppCompat.Light">
    </style>

    <style name="button" parent="Widget.AppCompat.Spinner">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="grid" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="progress" parent="Widget.AppCompat.ProgressBar">
    </style>

    <style name="dark" parent="@style/Theme.AppCompat">
        <item name="colorPrimary">@color/grey_900</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:colorBackground">@color/grey_850</item>
        <item name="colorRed">#ffef9a9a</item>
        <item name="colorYellow">@color/yellow_200</item>
    </style>

    <style name="light" parent="@style/Theme.AppCompat.Light">
        <item name="colorPrimary">@color/grey_100</item>
        <item name="colorPrimaryDark">@color/grey_600</item>
        <item name="android:colorBackground">@color/grey_50</item>
        <item name="colorRed">#fff44336</item>
        <item name="colorYellow">@color/yellow_500</item>
    </style>

    <style name="dark.dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="colorRed">#ffef9a9a</item>
        <item name="colorYellow">@color/yellow_200</item>
    </style>

    <style name="light.dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="colorRed">#fff44336</item>
        <item name="colorYellow">@color/yellow_500</item>
    </style>

    <style name="dark.toolbar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="light.toolbar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
